bobody {
    font-family: 'Montserrat', sans-serif;

}

.social-part .fa{
    padding-right:20px;
}
ul li a{
    margin-right: 20px;
}

.bg-light{
    background: #ffd10e!important;
}


.main-section .container .img-bg{
    width: 80%;
    margin-left: 10%;
    }

    .main-section .container{
        background-color: #ccc;
        }


/* Category Ads */

#ads {
    margin: 30px 0 30px 0;
   
}

#ads .card-notify-badge {
        position: absolute;
        left: -10px;
        top: -20px;
        background: #ffd10e;
        text-align: center;
        border-radius: 30px 30px 30px 30px; 
        color: #000;
        padding: 5px 10px;
        font-size: 14px;

   }
#ads .card-notify-year {
    position: absolute;
    right: -10px;
    top: -20px;
    background: #ff4444;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    font-size: 12px;
    width: 70px;
    height: 70px;
    padding: 30px 0 0 0;
}



#ads .card-detail-badge {      
        background: #ffd10e;
        text-align: center;
        border-radius: 30px 30px 30px 30px;
        color: #000;
        padding: 5px 10px;
        font-size: 14px;        
    }

   

#ads .card:hover {
            background: #fff;
            box-shadow: 12px 15px 20px 0px rgba(46,61,73,0.15);
            border-radius: 4px;
            transition: all 0.3s ease;
        }

#ads .card-image-overlay {
        font-size: 20px;
        
    }


#ads .card-image-overlay span {
            display: inline-block;              
        }


#ads .ad-btn {
        text-transform: uppercase;
        width: 150px;
        height: 40px;
        border-radius: 80px;
        font-size: 16px;
        line-height: 35px;
        text-align: center;
        border: 3px solid #e6de08;
        display: block;
        text-decoration: none;
        margin: 20px auto 1px auto;
        color: #000;
        overflow: hidden;        
        position: relative;
        background-color: #e6de08;
    }

#ads .ad-btn:hover {
            background-color: #e6de08;
            color: #1e1717;
            border: 2px solid #e6de08;
            background: transparent;
            transition: all 0.3s ease;
            box-shadow: 12px 15px 20px 0px rgba(46,61,73,0.15);
        }

#ads .ad-title h5 {
        text-transform: uppercase;
        font-size: 18px;
    }

    .ui-widget-content {
        border: 0px solid #a8a8a8;
        background: #fff;
        color: #4f4f4f;
        padding: -9px;
    }

    .btn-group-sm>.btn, .btn-sm {
        padding: 0.25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        margin: 3px 0 0 0;
        border-radius: .2rem;
        border-radius: 40px;
    }
    #tableAds{
        display: none;
    }
    .img-fluid {
        width: 100%;
        height: 200px;
    }
	   
	.ui-datagrid-column {
    	padding: 3px;
    	width: 20%;
	}






 @media(max-width: 740px) {
	#ui-datagrid-data{
		display: none;
	}

        .img-fluid {
            width: 100%;
            height: auto;
        }
        #j_idt8, .j_idt8{

            display: none;
        }

        #tableAds{
            display: block;
        }

        .sub-header{
            opacity: 0;
            display: none;
        }

        .main-section .container .img-bg {
            width: 100%;
            margin-left: 0;
        }

        .navbar-light .navbar-toggler {
            color: rgb(183, 121, 121);
            border-color: #000000;
            background: #ffffff;
        }

        .col-md-3{
            position: relative;
            width: 100%;
            min-height: 1px;
            padding-right: 40px;
            padding-left: 40px;
            margin: 31px 0;
        }

        #ads .ad-btn {
            text-transform: uppercase;
            width: 150px;
            height: 40px;
            border-radius: 13px;
            font-size: 16px;
            line-height: 35px;
            text-align: center;
            border: 3px solid #81a05d;
            display: block;
            text-decoration: none;
            margin: 20px auto 1px auto;
            color: #e8e8e8;
            overflow: hidden;
            position: relative;
            background-color: #6a9e26;
        }

        .h4, h4 {
            font-size: 2rem;
            margin: 0px 0px -17px;
            letter-spacing: 27px;
            box-shadow: 0px 4px 31px #dee2e6;
            text-align: center;
        }
        
        }


.user_card {
			height: 400px;
			width: 350px;
			margin-top: auto;
			margin-bottom: auto;
			background: #ffbf00;
			position: relative;
			display: flex;
			justify-content: center;
			flex-direction: column;
			padding: 10px;
			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
			-webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
			-moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
			border-radius: 5px;
		}
		.brand_logo_container {
			position: absolute;
			height: 170px;
			width: 170px;
			top: -75px;
			border-radius: 50%;
			background: #ffffff;
			padding: 10px;
			text-align: center;
		}
		.brand_logo {
			height: 150px;
			width: 150px;
			border-radius: 50%;
			border: 2px solid white;
		}
		.form_container {
			margin-top: 100px;
		}
		.login_btn {
			width: 100%;
			background: #c0392b !important;
			color: white !important;
		}
		.login_btn:focus {
			box-shadow: none !important;
			outline: 0px !important;
		}
		.login_container {
			padding: 0 2rem;
		}
		.input-group-text {
			background: #c0392b !important;
			color: white !important;
			border: 0 !important;
			border-radius: 0.25rem 0 0 0.25rem !important;
		}
		.input_user,
		.input_pass:focus {
			box-shadow: none !important;
			outline: 0px !important;
		}
		.custom-checkbox .custom-control-input:checked~.custom-control-label::before {
			background-color: #c0392b !important;
		}

.h-100 {
    height: 100%!important;
    margin: 75px auto;
}
